<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách Đơn Hàng Của Tôi</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Mã Đơn Hàng
                                    </th>
                                    <th>
                                        Tên Khách Hàng
                                    </th>
                                    <th>
                                        Địa Chỉ Thanh Toán
                                    </th>
                                    <th>
                                        Tổng Tiền
                                    </th>
                                    <th>
                                        Phương Thức
                                    </th>
                                    <th>
                                        Trạng Thái
                                    </th>   
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>
                                            @order.Id
                                        </td>
                                        <td>
                                            @order.Customer.Name
                                        </td>
                                        <td>
                                            @order.Address
                                        </td>
                                        <td>
                                            @order.Total
                                        </td>
                                        <td>
                                            @order.Payment
                                        </td>
                                        @if (order.Status == 0)
                                        {
                                            <td style="color:forestgreen;">
                                                Đã Xác Nhận
                                            </td>
                                        }
                                        @if (order.Status == 1)
                                        {
                                            <td style="color:red;">
                                                Đang Chờ
                                            </td>
                                        }
                                        @if (order.Status == 2)
                                        {
                                            <td style="color:red;">
                                                Bị Hủy
                                            </td>
                                        }
                                    </tr>
                                }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


