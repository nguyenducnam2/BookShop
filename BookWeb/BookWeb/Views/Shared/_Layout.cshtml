@using BookWeb.Models;
@{
Customer customer =(Customer) HttpContext.Current.Session["Customer"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Goozi</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Web/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Content/Web/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/Web/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Web/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Web/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Web/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Web/styles/responsive.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="super_container">

        <!-- Header -->

        <header class="header trans_300">

            <!-- Top Navigation -->

            <div class="top_nav">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="top_nav_left"><a href="/admin/home/login">Đăng Nhập Quản Trị</a></div>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="top_nav_right">
                                <ul class="top_nav_menu">
                                    <li class="account">
                                        <a href="#">
                                            @if (customer != null)
                                            {
                                                @customer.Name
                                            }
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->

            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a href="/home"><img src="~/Asset/Images/Book/LogoGoozi.png" style="width:100px;height:89px;"/></span></a>
                            </div>
                            <nav class="navbar">
                                <ul class="navbar_menu">
                                    <li><a href="/home">Trang Chủ</a></li>
                                    <li><a href="/products">Cửa Hàng</a></li>
                                    <li><a href="/home/contact">Liên Hệ</a></li>
                                    @if (customer == null)
                                    {
                                        <li><a href="/home/login">Đăng Nhập</a></li>
                                    }
                                    @if (customer != null)
                                    {
                                        <li><a href="/home/logout">Đăng Xuất</a></li>
                                    }
                                    <li><a href="/home/register">Đăng Kí</a></li>
                                </ul>
                                <ul class="navbar_user">
                                    <li><a href="/orders"><i class="fa fa-user" aria-hidden="true"></i></a></li>
                                    <li class="checkout">
                                        <a href="/cart">
                                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                            <span id="checkout_items" class="checkout_items">0</span>
                                        </a>
                                    </li>
                                </ul>
                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>

        <div class="fs_menu_overlay"></div>
        <div class="hamburger_menu">
            <div class="hamburger_close"><i class="fa fa-times" aria-hidden="true"></i></div>
            <div class="hamburger_menu_content text-right">
                <ul class="menu_top_nav">
                    <li class="menu_item has-children">
                        <a href="#">
                            usd
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="menu_selection">
                            <li><a href="#">cad</a></li>
                            <li><a href="#">aud</a></li>
                            <li><a href="#">eur</a></li>
                            <li><a href="#">gbp</a></li>
                        </ul>
                    </li>
                    <li class="menu_item has-children">
                        <a href="#">
                            English
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="menu_selection">
                            <li><a href="#">French</a></li>
                            <li><a href="#">Italian</a></li>
                            <li><a href="#">German</a></li>
                            <li><a href="#">Spanish</a></li>
                        </ul>
                    </li>
                    <li class="menu_item has-children">
                        <a href="#">
                            My Account
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="menu_selection">
                            <li><a href="#"><i class="fa fa-sign-in" aria-hidden="true"></i>Sign In</a></li>
                            <li><a href="#"><i class="fa fa-user-plus" aria-hidden="true"></i>Register</a></li>
                        </ul>
                    </li>
                    <li class="menu_item"><a href="#">home</a></li>
                    <li class="menu_item"><a href="#">shop</a></li>
                    <li class="menu_item"><a href="#">promotion</a></li>
                    <li class="menu_item"><a href="#">pages</a></li>
                    <li class="menu_item"><a href="#">blog</a></li>
                    <li class="menu_item"><a href="#">contact</a></li>
                </ul>
            </div>
        </div>
        @RenderBody()
    </div>


    <script src="~/Content/Web/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/Web/styles/bootstrap4/popper.js"></script>
    <script src="~/Content/Web/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Content/Web/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/Content/Web/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Content/Web/plugins/easing/easing.js"></script>
    <script src="~/Content/Web/js/custom.js"></script>
    <script src="~/Content/Web/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/Web/styles/bootstrap4/popper.js"></script>
    <script src="~/Content/Web/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Content/Web/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/Content/Web/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Content/Web/plugins/easing/easing.js"></script>
    <script src="~/Content/Web/js/custom.js"></script>
    <script src="~/Content/Web/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script src="~/Scripts/cartjs.js"></script>
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
