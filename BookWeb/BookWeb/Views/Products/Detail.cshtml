@model BookWeb.Models.Book
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
    <link rel="stylesheet" type="text/css" href="~/Content/Web/styles/single_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Web/styles/single_responsive.css">
    <div class="container single_product_container">
        <div class="row">
            <div class="col-lg-7">
                <div class="single_product_pics">
                    <div class="row">
                        <div class="col-lg-12 image_col order-lg-2 order-1">
                            <div class="single_product_image">
                                <div class="single_product_image_background">
                                    <img src="@Url.Content(Model.Image)" width="400px" height="400px" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="product_details">
                    <div class="product_details_title">
                        <h2>@Model.Title</h2>
                        <p>@Model.Detail</p>
                    </div>
                    <div class="free_delivery d-flex flex-row align-items-center justify-content-center" style="color:red;">
                        <span class="ti-truck"></span><span>Miễn Phí Giao Hàng</span>
                    </div>
                    <div class="product_price">@Model.Price $</div>
                    <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
                        <span>Số Lượng:</span>
                        <div class="quantity_selector">
                            <span class="minus"><i class="fa fa-minus" aria-hidden="true"></i></span>
                            <span id="quantity_value">1</span>
                            <span class="plus"><i class="fa fa-plus" aria-hidden="true"></i></span>
                        </div>
                        <button data-id="@Model.Id" class="btnAddToCart btn btn-primary">Thêm giỏ hàng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Content/Web/js/single_custom.js"></script>
}