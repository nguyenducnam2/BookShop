<div class="container">
    <div class="row">
        <table class="table">
            <tr>
                <th>STT</th>
                <th>ảnh Sản Phẩm</th>
                <th>Tên Sản Phẩm</th>
                <th>Danh Mục</th>
                <th>Gía</th>
                <th>Số Lượng</th>
                <th>Thành Gía</th>
                <th></th>
            </tr>
            @if (Model != null && Model.Any())
            {
                var i = 0;
                var final=0;
                foreach (var item in Model)
                {
                    final += item.Total;
                    <tr id="trow_@item.BookId">
                        <td>@(i+1)</td>
                        <td><img src="@Url.Content(item.BookImage)" width="50" height="50"/></td>
                        <td>@item.BookTitle</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.Total</td>
                        <td>
                            <a href="#" data-id="@item.BookId" class="btn btn-danger btnDelete">Xóa</a>
                        </td>
                    </tr>
                    i++;
                }
                <tr>
                    <td class="text-right" colspan="7" style="font-weight:bolder;">Tổng: @final $</td>
                    <td><a href="/cart/checkout" class="btn btn-danger btnCheckout">Thanh Toán</a></td>
                </tr>
}
           else
            {
                <tr>
                    <td style="font-weight:bolder;">giỏ hàng trống</td>
                </tr>
            }
        </table>
    </div>
</div>